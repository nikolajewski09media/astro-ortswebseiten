---
export function getStaticPaths() {
    return [
        { params: { ort: "berlin" } },
        { params: { ort: "hamburg" } },
        { params: { ort: "regensburg" } },
        { params: { ort: "bremen" } },
        { params: { ort: "muenchen" } },
    ];
}

const { ort } = Astro.params;
/**            "B"                       "erlin"      */
/**            "H"                       "amburg"     */
/**            "R"                       "egensburg"  */
const Ort = ort[0].toLocaleUpperCase() + ort.slice(1);
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro</title>
    </head>
    <body>
        <h1>{Ort}</h1>
    </body>
</html>
